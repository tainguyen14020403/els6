<%= provide(:title, t("word_list")) %>
<h1><%= t("word_list") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag words_path, method: :get do %>
      <div class="row">
        <div class="col-md-6">
          <%= select_tag :category,
            options_from_collection_for_select(
            @categories, :id, :name, params[:category_id]),
            include_blank: false, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <label>
            <%= radio_button_tag :option, t("radio_learn"), class: "radio-inline" %>
            <%= t("radio_learn") %>
          </label>
          
          <label>
            <%= radio_button_tag :option, t("radio_not_learn"), class: "radio-inline" %>
            <%= t("radio_not_learn") %>
          </label>
          
          <label>
            <%= radio_button_tag :option, t("radio_all_word"), class: "radio-inline" %>
            <%= t("radio_all_word") %>
          </label>
        </div>
      </div>
      <%= submit_tag t("filter"), class: "btn btn-default filter-button" %>
    <% end %>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= t("english") %></th>
      <th><%= t("vietnam") %></th>
      <th><%= t("category") %></th>
    </tr>
  </thead>
  <tbody>
    <% if !@words.nil? %>
      <%= will_paginate %>
      <% @words.each do |word| %>
        <tr class="info">
          <td><%= word.content %></td>
          <td><%= word.mean %></td>
          <td><%= word.category.name %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
