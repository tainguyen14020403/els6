<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
      <h2><%= @user.name %></h2>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
  </div>
  <aside class="col-md-6">
    <p><%= t("activities") %></p>
    <hr class="line">
  </aside>
</div>
