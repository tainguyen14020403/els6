<% provide(:title, t("categories")) %>
<h1><%= t("categories-title") %></h1>
<div class="btn-admin">
  <%= link_to t("word"), admin_words_path, class: "btn btn-primary" %>
  <%= link_to t("create_category"), new_admin_category_path, class: "btn btn-primary" %>
</div>
<%= will_paginate %>

<ul class="categories">
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= link_to t("start-categories"), category_lessons_path(category.id), method: :post, class: "btn btn-primary" %>
      <%= t("space") %>
      <%= link_to t("delete"), admin_category_path(category.id), method: :delete,
        data: {confirm: t("confirm-delete")} %>
      <%= t("space") %>
      <%= link_to t("edit"), edit_admin_category_path(category.id) %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
