<% provide(:title, t("all-user")) %>
<h1><%= t("all-user") %></h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: Settings.size_image %>
      <%= link_to user.name, user %>
      <% if !current_user?(user) %>
        <%= t("space") %>
        <%= link_to t("delete"), admin_user_path(user.id), method: :delete,
          data: {confirm: t("confirm-delete")} %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
