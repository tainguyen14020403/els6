<%= provide(:title, t("word_list")) %>
<h1><%= t("word_list") %></h1>
<%= link_to t("create_word"), new_admin_word_path, class: "btn btn-primary"%>

<table class="table">
  <thead>
    <tr>
      <th><%= t("english") %></th>
      <th><%= t("vietnam") %></th>
      <th><%= t("category") %></th>
    </tr>
  </thead>
  <tbody>
    <% @words.each do |word| %>
      <tr class="info">
        <td><%= word.content %></td>
        <td><%= word.mean %></td>
        <td><%= word.category.name %></td>
        <td><%= link_to t("edit"), edit_admin_word_path(id: word.id) %></td>
        <td><%= link_to t("delete"), [:admin, word], method: :delete,
          data: {confirm: t("confirm-delete")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
